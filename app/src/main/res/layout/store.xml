<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_welcome"
        android:text="@string/available_on_the_market"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_box"
        android:hint="@string/item_name"
        android:textSize="20sp"
        android:width="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_welcome"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_button"
        android:text="@string/find"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/search_box"
        app:layout_constraintTop_toTopOf="@+id/search_box"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_display"
        android:hint="@string/items_go_here"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:width="310dp"
        android:height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/search_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="47dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_home_button"
        android:text="@string/home"
        android:textSize="20sp"
        android:width="150dp"
        android:height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/item_display"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="125dp"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>